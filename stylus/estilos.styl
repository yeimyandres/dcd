//ARCHIVOS IMPORTADOS
@import url("http://fonts.googleapis.com/css?family=Ubuntu|Titillium+Web|Raleway")
@import "normalize.css"

//COLORES
azuliccf = rgb(0,70,142)
blanco = rgb(255,255,255)
diadomingo = rgb(221,130,140)
grisboton = rgb(221,221,221)
grisazul = rgb(221,221,255)
negro = rgb(0,0,0)

//ESTILOS
*
	color azuliccf
	font-family Raleway

figure
	margin 0
	padding 0
	
h1
h2
p
	margin 0
	padding 0

header
	border-bottom 1px solid azuliccf
	overflow hidden
	padding .5em 0
	figure
		float left
		margin 0 2em 0 0
		padding 0 1em

nav
	float left
	height auto
	width 20%
	ul
		li
			display block
			a
				background azuliccf
				border 1px solid azuliccf
				color blanco
				display block
				padding .7em 0
				text-align center
				text-decoration none
				text-transform uppercase
				&:hover
					background none
					border 1px solid azuliccf
					color azuliccf
					cursor pointer

footer
	border-top 1px solid azuliccf
	clear both
	padding 1em 0 0 2em

section
	float right
	padding 1em 0
	width 78%

ul
	list-style none
	margin 0
	padding 0
	
#fechaactual
	margin 2em 0 0 0
	#mifecha
		background azuliccf
		color blanco

.calendario
	table
		tr
			height 1.5em
			text-align center
			td
			th
				width 3em
			td
				color azuliccf
				&.diaactual
					background azuliccf
					color blanco
				&.domingo
					color rgb(220,20,30)
				&.opciondia:hover
					background grisboton
					color azuliccf
					cursor pointer
			th
				background grisazul
				color azuliccf

.devocional
	margin-top 1em
	ul
		li
			margin 0 0 5px 0
			text-align center
			a
				background grisboton
				color azuliccf
				display block
				padding .5em 0
				text-decoration none
				&:hover
					cursor pointer
			div
				display none
				textarea
					display block
					margin 0 auto
					width 90%

.imagenLogo
	width 100px

.seleccionfecha
	float left
	margin 0 2em 0 0
	width 300px
	ul
		margin 0 0 5px 0
		li
			display block
			text-align center
			a
				display block
				text-transform uppercase
				&:hover
					cursor pointer
			&.principal
				margin 0 0 5px 0
				a
					background azuliccf
					color blanco
					padding .4em 0
			&.secundario
				display none
				a
					background grisboton
					border 1px solid blanco
					color azuliccf
					padding .2em 0
					&:hover
						text-decoration underline